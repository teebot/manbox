<div id="verifCodeModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="verifCodeModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="deliveryModalLabel">@Html.LocalizedText("VerifCodeModalTitle")</h3>
    </div>
    <div class="modal-body">
        <img src="~/Content/images/verif-code.jpg" alt="verification code" /><br />
        @Html.LocalizedText("VerifCodeModalBodyHtml")

    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">@Html.LocalizedText("CloseBtn")</button>
    </div>
</div>
