
@model PasswordUpdateViewModel

<div class="container">
<div class="row sheet">
    <div class="span3">
        @Html.Partial("_AccountMenu", new AccountMenuViewModel() { ActiveMenuItem = AccountMenuItem.Password })
    </div>
    <div class="span9">

        <h3>@Html.LocalizedText("AccountPasswordChange")</h3> 

        @using(Html.BeginForm("UpdatePassword", "Account", FormMethod.Post))
        {
            <label>@Html.LocalizedText("NewPassword")</label>
            @Html.PasswordFor(m => m.NewPassword)
            @Html.ValidationMessageFor(m => m.NewPassword)

            <label>@Html.LocalizedText("NewPasswordRepeat")</label>
            @Html.PasswordFor(m => m.RepeatNewPassword)
            @Html.ValidationMessageFor(m => m.RepeatNewPassword)

            <br />
            <button type="submit" class="btn btn-primary">@Html.LocalizedText("Confirm")</button>
        }

    </div>
</div>
</div>